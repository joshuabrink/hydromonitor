  "version": "0.2.0",
  "configurations": [
  {
    "name": "Launch vivaldi",
    "request": "launch",
    "type": "chrome",
    "url": "http://localhost:8082",
    "webRoot": "${workspaceFolder}\\assets\\js",
    "runtimeExecutable": "C:\\Program Files (x86)\\Vivaldi\\Application\\vivaldi.exe"
  },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}\\app.js"
    }
  ]
}